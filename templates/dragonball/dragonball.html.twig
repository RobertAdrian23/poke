{# templates/dragonball/characters.html.twig #}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Personajes de Dragon Ball</title>
    <link rel="stylesheet" href="/css/personajes.css"> {# Enlace al archivo CSS #}
</head>
<body>

        <header class="cabezera">
            <nav>
                <a href="{{ path('inicio') }}" class="btn">Ir a la página principal</a>
                <a href="{{ path('informacion') }}" class="btn">Ir a Información y Encuestas</a>
                <a href="{{ path('personajes') }}" class="btn">Ir a Información de los Personajes</a>
            </nav>
        </header>

        <h1>Personajes de Dragon Ball</h1>

        <ul class="character-list"> {# Agregamos clase para el estilo #}
        {% for character in characters %}
            <li>
                <strong>{{ character.name }}</strong> 
                - {{ character.species }} 
                - {{ character.gender }}
            </li>
        {% endfor %}
        </ul>
</body>
</html>
